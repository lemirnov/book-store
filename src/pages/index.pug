      li.tabs__link-wrap
        a.tabs__link(href='', alt='') Научпоп
      li.tabs__link-wrap
        a.tabs__link(href='', alt='') Бизнес
      li.tabs__link-wrap
        a.tabs__link(href='', alt='') Творчество
      li.tabs__link-wrap
        a.tabs__link(href='', alt='') Бизнес

    .tabs__contant-item
      +mini-card('Латеральная логика', 'book.html', 'img/books/book-lateralnaya-logika.jpg', 'Головоломный путь к нестандартному решению', '500p')

    .tabs__content-item#marketing
      +mini-card('Путеводитель по лжи', 'book.html', 'img/books/book-putevoditel-po-lzhi.jpg', 'Критическое мышление в эпоху постправды', '500 p')

    .tabs__content-item
      +mini-card('Дао физики', 'book.html', 'img/books/book-dao-fiziki.jpg', 'Исследование параллелей между современной физикой и восточной философией', '500 p')

    .tabs__content-item
      +mini-card('Не очевидно', 'book.html', 'img/books/book-ne-ochevidno.jpg', 'Как выявлять тренды раньше других', '500 p')

    .pagination
      span.pagination__item(href='...') 1
