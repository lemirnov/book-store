      a.pagination__item(href='...') 2
      a.pagination__item(href='...') 3
      a.pagination__item(href='...') 4
      a.pagination__item(href='...') 5
      span.pagination__item ...
      a.pagination__item(href='...') 10

    .contaner
      h2 Доставим в любое место
      p //ну почти в любое
      img(src='...', alt='ico1')
      img(src='...', alt='ico2')
      img(src='...', alt='ico3')
      img(src='...', alt='ico4')

    .newsbook
      h1 Наши новинки
      p Все новинки
      +mini-card('Латеральная логика', 'book.html', 'src\img\books\book-lateralnaya-logika.jpg', 'Головоломный путь к нестандартному решению', '500p')
      +mini-card('Путеводитель по лжи', 'book.html', 'src\img\books\book-putevoditel-po-lzhi.jpg', 'Критическое мышление в эпоху постправды', '500 p')
      +mini-card('Дао физики', 'book.html', 'src\img\books\book-dao-fiziki.jpg', 'Исследование параллелей между современной физикой и восточной философией', '500 p')
