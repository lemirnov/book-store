  .tabs
    ul.tabs__links
      li.tabs__link-wrap.tabs__link-wrap--active
        a.tabs__link(href='...', alt=tab00) Все
      li.tabs__link-wrap
        a.tabs__link(href='...', alt=tab01) Маркетинг
      li.tabs__link-wrap
        a.tabs__link(href='...', alt=tab02) Научпоп
      li.tabs__link-wrap
        a.tabs__link(href='...', alt=tab03) Бизнес
      li.tabs__link-wrap
        a.tabs__link(href='...', alt=tab04) Творчество
      li.tabs__link-wrap
        a.tabs__link(href='...5', alt=tab05) Бизнес
      tab00.tabs__contants-item
        +mini-card('Латеральная логика', 'book.html', 'src\img\books\book-lateralnaya-logika.jpg', 'Головоломный путь к нестандартному решению', '500p')
      tab01.tabs__content-item
        +mini-card('Путеводитель по лжи', 'book.html', 'src\img\books\book-putevoditel-po-lzhi.jpg', 'Критическое мышление в эпоху постправды', '500 p')
      tab02.tabs__content-item
        +mini-card('Дао физики', 'book.html', 'src\img\books\book-dao-fiziki.jpg', 'Исследование параллелей между современной физикой и восточной философией', '500 p')
      tab03.tabs__content-item
        +mini-card('Не очевидно', 'book.html', 'src\img\books\book-ne-ochevidno.jpg', 'Как выявлять тренды раньше других', '500 p')

    .pagination
